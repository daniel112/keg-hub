{
  "name": "keg-regulator",
  "description": "Automated web testing for the keg and its associated repos",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "attach": "yarn docker:attach",
    "cli": "yarn docker:cli",
    "logs": "yarn docker:logs",
    "rerun": "yarn docker:rerun",
    "restart": "yarn docker:restart",
    "status": "yarn docker:status",
    "start": "yarn docker:up",
    "stop": "yarn docker:stop",
    "docker:attach": "node scripts/docker/attach.js",
    "docker:cli": "node scripts/docker/cli.js",
    "docker:down": "node scripts/docker/down.js",
    "docker:logs": "node scripts/docker/logs.js",
    "docker:restart": "yarn docker:down && yarn docker:up",
    "docker:rerun": "yarn test:archive && node scripts/docker/restart.js",
    "docker:status": "node scripts/docker/status.js",
    "docker:stop": "yarn test:archive && yarn docker:down",
    "docker:up": "node scripts/docker/up.js",
    "report:generate": "node src/lib/generateReport.js",
    "reports:open": "open src/reports/cucumber/index.html",
    "report:serve": "http-server src/reports/cucumber/ --port ${DOC_APP_PORT:-4000} --silent",
    "report:watch": "node scripts/watchForReport.js",
    "report:view": "node scripts/openURL.js src/reports/cucumber/index.html",
    "test:archive": "bash src/lib/archive.sh src/reports",
    "test:chrome": "BROWSER=chrome yarn test:cucumber",
    "test:cli": "node scripts/cli.js",
    "test:cucumber": "node_modules/.bin/cucumber-js --require 'src/support/**/*.js' --format json:src/reports/cucumber/${BROWSER:-chrome}.json src/features",
    "test:firefox": "BROWSER=firefox yarn test:cucumber",
    "test:local": "src/lib/test.sh; yarn report:view;",
    "test:grid": "bash src/lib/testGrid.sh",
    "test:rerun": "src/lib/rerun.sh"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@keg-hub/ask-it": "0.0.1",
    "@keg-hub/spawn-cmd": "0.0.1",
    "@keg-hub/jsutils": "0.0.1",
    "@keg-hub/args-parse": "0.0.1",
    "chokidar": "3.4.0",
    "cucumber": "6.0.5",
    "dotenv": "^8.2.0",
    "http-server": "0.12.3",
    "multiple-cucumber-html-reporter": "1.16.3",
    "open": "7.0.4",
    "selenium-webdriver": "4.0.0-alpha.7",
    "shelljs": "0.8.4"
  }
}
